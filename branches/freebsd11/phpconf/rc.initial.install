	/* parse the configuration and include all functions used below */
	require_once("config.inc");
	require_once("functions.inc");

	$fp = fopen('php://stdin', 'r');

	$disks = storage_disk_get_devices();

	echo <<<EOD

Valid disks are:


EOD;

	$cfdevice = trim(file_get_contents("/var/etc/cfdevice"));

	foreach ($disks as $disk) {
		if ($disk != $cfdevice) {
			$info = storage_read_diskinfo($disk);
			$name = storage_disk_get_name($disk);
			echo $disk . "\t$name\t" . format_bytes($info['sizeinbytes']) . "\n";
		}
	}

	do {
		echo "\nEnter the device name you wish to install onto: ";
		$target_disk = chop(fgets($fp));
		if ($target_disk === "") {
			exit(0);
		}
	} while (!in_array($target_disk, $disks) && ($target_disk != $cfdevice));
	
	
	echo <<<EOD

*******************************************************************************
* WARNING!                                                                    *
* t1n1wall is about to be installed onto the $target_disk device.                      *
* - everything on this device will be erased!                                 *
* - this cannot be undone!                                                    *
*******************************************************************************

The firewall will reboot after installation.

Do you want to proceed? (y/n) 
EOD;
	
	if (strcasecmp(chop(fgets($fp)), "y") == 0) {

		echo "Installing... ";
		
		/* mount CD-ROM */
		@mkdir("/cdrom");
		if (mwexec("/sbin/mount -r -t cd9660 /dev/acd0 /cdrom") != 0 && mwexec("/sbin/mount -r -t cd9660 /dev/cd0 /cdrom") != 0 && !file_exists("/cf/firmware.img")) {
			echo "failed! (cannot mount CD-ROM)";
		} else if (!file_exists("/cdrom/firmware.img") && !file_exists("/cf/firmware.img")) {
			echo "failed! (firmware not found)\n";
		} else {
			echo "Applying image to disk .... ";
			if (file_exists("/cf/firmware.img")) {
				mwexec("/usr/bin/gunzip -S \"\" -c /cf/firmware.img | dd of=/dev/$target_disk ibs=64k obs=64k");
			} else {
				mwexec("/usr/bin/gunzip -S \"\" -c /cdrom/firmware.img | dd of=/dev/$target_disk ibs=64k obs=64k");
			}
			echo "done\n";
			
			/* copy existing configuration */
			echo "Copying configuration... ";
			@mkdir("/mnttmp");
			mwexec("/sbin/mount -w -o noatime /dev/{$target_disk}a /mnttmp");
			copy("{$g['conf_path']}/config.xml", "/mnttmp/conf/config.xml");
			mwexec("/sbin/umount /mnttmp");
			echo "done\n";
			
			mwexec("/sbin/umount /cdrom");
			
			system_reboot_sync();
		}
	}

